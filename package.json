{
  "name": "sportique-xrpl-core",
  "version": "1.0.0",
  "description": "SportiQue XRPL Core - Blockchain-based Health Data Marketplace",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "demo": "ts-node scripts/runDemo.ts",
    "demo:subscription": "ts-node scripts/subscriptionScenario.ts",
    "demo:pool": "ts-node scripts/poolScenario.ts",
    "demo:datapool": "ts-node transactions/scripts/dataPoolScenario.ts",
    "clean": "rm -rf dist",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sportique/xrpl-core.git"
  },
  "keywords": [
    "xrpl",
    "xrp",
    "blockchain",
    "health-data",
    "nft",
    "escrow",
    "fintech",
    "rwa",
    "payment",
    "sportique"
  ],
  "author": "SportiQue Team",
  "license": "MIT",
  "dependencies": {
    "xrpl": "^2.14.0",
    "firebase": "^10.7.0",
    "firebase-admin": "^11.11.0",
    "crypto-js": "^4.2.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/crypto-js": "^4.2.1",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.10",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ]
}
